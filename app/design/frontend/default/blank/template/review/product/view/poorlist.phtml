<script type="text/javascript">
jQuery(function(){
	//这是一个非常简单的demo实例，让列表元素分页显示
	//回调函数的作用是显示对应分页的列表项内容
	//回调函数在用户每次点击分页链接的时候执行
	//参数page_index{int整型}表示当前的索引页
	var initPagination = function() {
		var num_cp = jQuery("#hiddenresult_cp div.cp").length;
		// 创建分页
		jQuery("#Pagination_cp").pagination(num_cp, {
			num_edge_entries: 1, //边缘页数
			num_display_entries: 4, //主体页数
      prev_text: '上一页',
      next_text: '下一页',
			callback: pageselectCallbackcp,
			items_per_page:3 //每页显示1项
		});
	 }();
	 
	function pageselectCallbackcp(page_index, jq){
    page_index = Number(page_index) * 3;
    jQuery("#Searchresult_cp").empty();
    for (var i=0;i<3;i++) { 
      var num = i + page_index;  
      var new_content = jQuery("#hiddenresult_cp div.cp:eq("+num+")").clone();
      //alert("#hiddenresult div.pl:eq("+page_index+i+")");
		  jQuery("#Searchresult_cp").append(new_content); //装载对应分页的内容
    }
		return false;
	}
});
</script>
   
